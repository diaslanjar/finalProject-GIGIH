<div class="container">
  <div id="<%= dom_id order %>">

  <div class="card text-center">
  <div class="card-header">
    <%= order.customer.name %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= order.menu.name %></h5>
    <p class="card-text">Jumlah: <%= order.quantity %></p>
    <p class="card-text">Status: <%= order.status %></p>
    <div class="d-flex justify-content-center">
      <div style="padding: 0 5px;">
        <%= link_to "Back", orders_path, :class => "btn btn-primary" %>
      </div>
      <div style="padding: 0 5px;">
        <%= link_to "Edit", edit_order_path(@order), :class => "btn btn-warning" %>
      </div>
      <div style="padding: 0 5px;">
        <%= button_to "Delete", @order, method: :delete, :class => "btn btn-danger" %>
      </div>
    </div>
  </div>
    <div class="card-footer text-muted">
      Tanggal Pemesanan: <%= order.order_date %>
    </div>
  </div>
    
  </div>
</div>
