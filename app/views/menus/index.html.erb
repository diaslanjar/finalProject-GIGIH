<div class="container">
<p style="color: green" class="mt-3"><%= notice %></p>

<h1 style="text-align:center;">Menus</h1>

<%= link_to "Back", root_path %>

<br>
<table class="table">
  <thead>
    <tr>
      <th >Category</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
    <tr>     
      <td>
          <%= menu.category.name %>       
      </td>
      <td>
          <%= menu.name %>       
      </td>  
      <td>
          Rp. <%= menu.price %>       
      </td>
      <td>
          <%= menu.description %>       
      </td>  
      <td>
          <%= link_to "Show this menu", menu %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<hr>
<div style="text-align:center;">
  <%= link_to "Add Menu", new_menu_path, :class => "btn btn-primary" %>
</div>
</div>